/*首页导航*/
page{
	color: #666;
	padding: 10rpx;
}
/*.nav_warp{}*/
.nav{
	white-space: nowrap;
	padding: 5rpx 0;
}
.nav_item{
	padding: 20rpx 45rpx;
	font-size: 30rpx;
	display: inline-block;
}
/* 选中后下划线 */
.nav_item.active{
	border-bottom: 5rpx solid #de688b;
}

/*轮播图*/
.slides{
	margin-top: 10rpx;
    margin-bottom: 20rpx;
}
.slides swiper{
	height: 220rpx;
}
.slides navigator{
	width: 100%;
	height: 100px;
}
.slides image{
	width: 100%;
	height: 100px;
}
/*视频列表*/
.video_warp{
	display: flex;
	flex-wrap: wrap;
	padding: 5rpx;
	justify-content: space-between;
}
.video_item{
	width: 45%;
	margin-bottom: 20rpx;
}
.video_img image{
	width: 180%;
	margin-left: 80rpx;
}
.video_title{
	width: 180%;
	margin-left: 280rpx;
